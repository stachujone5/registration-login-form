{
  "root": true,
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typeofweb"],
  "extends": ["plugin:@typeofweb/recommended", "next/core-web-vitals"],
  "rules": {
    "@typeofweb/capitalize-modules": "off",
    "import/no-default-export": 0,
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ]
  },
  "ignorePatterns": ["next.config.js"]
}
